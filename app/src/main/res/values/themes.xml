<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CalculatorApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FunctionalButtons">
        <item name="android:textSize">40sp</item>
        <item name="android:minHeight">80dp</item>
        <item name="android:textColor">@color/colorFunctionalButtonTxt</item>
        <item name="android:background">@drawable/function_round_buttons</item>
    </style>

    <style name="NumberButtons">
        <item name="android:textSize">40sp</item>
        <item name="android:minHeight">80dp</item>
        <item name="android:textColor">@color/colorNumButtonTxt</item>
        <item name="android:background">@drawable/num_round_button</item>
    </style>

    <style name="EqualButtons">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/colorEquButtonTxt</item>
        <item name="android:background">@drawable/equal_round_buttons</item>
    </style>
</resources>