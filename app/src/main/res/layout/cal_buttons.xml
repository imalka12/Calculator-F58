<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="4"
    android:rowCount="5"
    android:layout_margin="2dp">

    <Button
        android:id="@+id/btn_Clear"
        android:text="C"
        style="@style/FunctionalButtons"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_columnWeight="1"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:onClick="clearEvent"
        />
    <Button
        android:id="@+id/btn_Percentage"
        android:text="%"
        style="@style/FunctionalButtons"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_columnWeight="1"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:onClick="percentageEvent" />

    <Button
        android:id="@+id/btn_Divide"
        android:text="/"
        style="@style/FunctionalButtons"
        android:layout_column="2"
        android:layout_row="0"
        android:layout_columnWeight="1"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:onClick="DivideEvent" />
    <Button
        android:id="@+id/btn_Multiply"
        android:text="*"
        style="@style/FunctionalButtons"
        android:layout_column="3"
        android:layout_row="0"
        android:layout_columnWeight="1"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:onClick="MultiplyEvent"
        />

    <!-- second line of buttons -->
    <Button
        android:id="@+id/btn_Seven"
        android:text="7"
        style="@style/NumberButtons"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_columnWeight="1"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/num_round_button"
        app:backgroundTint="@color/colorNumButtonBG"
        android:onClick="sevenEvent"/>

    <Button
        android:id="@+id/btn_Eight"
        android:text="8"
        style="@style/NumberButtons"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/num_round_button"
        app:backgroundTint="@color/colorNumButtonBG"
        android:onClick="eightEvent"/>
    <Button
        android:id="@+id/btn_Nine"
        android:text="9"
        style="@style/NumberButtons"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/num_round_button"
        app:backgroundTint="@color/colorNumButtonBG"
        android:onClick="NineEvent"/>

    <Button
        android:id="@+id/btn_Minus"
        style="@style/FunctionalButtons"
        android:layout_row="1"
        android:layout_column="3"
        android:layout_columnWeight="1"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/function_round_buttons"
        android:text="-"
        app:backgroundTint="@color/colorFunctionalButtonBG"
        android:onClick="minusEvent"/>

    <!-- third line of buttons -->
    <Button
        android:id="@+id/btn_Four"
        android:text="4"
        style="@style/NumberButtons"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_columnWeight="1"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/num_round_button"
        app:backgroundTint="@color/colorNumButtonBG"
        android:onClick="fourEvent"/>

    <Button
        android:id="@+id/btn_Five"
        android:text="5"
        style="@style/NumberButtons"
        android:layout_column="1"
        android:layout_row="2"
        android:layout_columnWeight="1"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/num_round_button"
        app:backgroundTint="@color/colorNumButtonBG"
        android:onClick="fiveEvent"/>
    <Button
        android:id="@+id/btn_Six"
        android:text="6"
        style="@style/NumberButtons"
        android:layout_column="2"
        android:layout_row="2"
        android:layout_columnWeight="1"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/num_round_button"
        app:backgroundTint="@color/colorNumButtonBG"
        android:onClick="sixEvent"/>

    <Button
        android:id="@+id/btn_Add"
        android:text="+"
        style="@style/FunctionalButtons"
        android:layout_column="3"
        android:layout_row="2"
        android:layout_columnWeight="1"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/function_round_buttons"
        app:backgroundTint="@color/colorFunctionalButtonBG"
        android:onClick="addEvent"/>

    <!-- 4th line of buttons -->
    <Button
        android:id="@+id/btn_One"
        android:text="1"
        style="@style/NumberButtons"
        android:layout_column="0"
        android:layout_row="3"
        android:layout_columnWeight="1"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/num_round_button"
        app:backgroundTint="@color/colorNumButtonBG"
        android:onClick="oneEvent"/>

    <Button
        android:id="@+id/btn_Two"
        android:text="2"
        style="@style/NumberButtons"
        android:layout_column="1"
        android:layout_row="3"
        android:layout_columnWeight="1"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/num_round_button"
        app:backgroundTint="@color/colorNumButtonBG"
        android:onClick="twoEvent"/>
    <Button
        android:id="@+id/btn_Three"
        android:text="3"
        style="@style/NumberButtons"
        android:layout_column="2"
        android:layout_row="3"
        android:layout_columnWeight="1"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/num_round_button"
        app:backgroundTint="@color/colorNumButtonBG"
        android:onClick="threeEvent"/>

    <Button
        android:id="@+id/btn_Equal"
        style="@style/EqualButtons"
        android:layout_row="3"
        android:layout_rowSpan="2"
        android:layout_column="3"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_vertical"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/equal_round_buttons"
        android:text="="
        app:backgroundTint="@color/colorEquButtonBG"
        android:onClick="equalEvent"/>

    <!-- 5th line of buttons -->
    <Button
        android:id="@+id/btn_Dot"
        android:text="."
        style="@style/NumberButtons"
        android:layout_column="0"
        android:layout_row="4"
        android:layout_columnWeight="1"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/num_round_button"
        app:backgroundTint="@color/colorNumButtonBG"
        android:onClick="dotEvent"/>

    <Button
        android:id="@+id/btn_Zero"
        android:text="0"
        style="@style/NumberButtons"
        android:layout_column="1"
        android:layout_row="4"
        android:layout_columnWeight="1"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/num_round_button"
        app:backgroundTint="@color/colorNumButtonBG"
        android:onClick="zeroEvent"/>
    <Button
        android:id="@+id/btn_DoubleZero"
        android:text="00"
        style="@style/NumberButtons"
        android:layout_column="2"
        android:layout_row="4"
        android:layout_columnWeight="1"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/num_round_button"
        app:backgroundTint="@color/colorNumButtonBG"
        android:onClick="doubleZeroEvent"/>


</GridLayout>